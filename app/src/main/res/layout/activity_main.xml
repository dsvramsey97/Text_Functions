<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/bateman"
    android:textAlignment="center">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/batecheck1"
        android:id="@+id/batecheck1"
        android:textStyle="bold"
        android:onClick="oncheck"
        android:layout_alignTop="@+id/batecheck2"
        android:layout_alignRight="@+id/colorspin"
        android:layout_alignEnd="@+id/colorspin" />
     " />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/batecheckita1"
        android:id="@+id/batecheck2"
        android:textStyle="italic"
        android:onClick="oncheck"
        android:checked="false"
        android:layout_marginBottom="74dp"
        android:layout_above="@+id/sizespin"
        android:layout_alignLeft="@+id/sizespin"
        android:layout_alignStart="@+id/sizespin" />

    <Spinner
        android:id="@+id/colorspin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_centerVertical="true"
        android:layout_marginRight="200dp"
        android:layout_marginTop="280dp"
        android:layout_marginBottom="200dp"/>
    <Spinner
        android:id="@+id/sizespin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_alignTop="@+id/colorspin"
        android:layout_alignBottom="@+id/colorspin"
        android:layout_marginLeft="200dp"

        />
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fontlist"
        android:layout_marginTop="330dp"
        android:layout_marginBottom="85dp"
        android:background="#ffffce71"
        android:clickable="true"
        android:choiceMode="singleChoice"
        android:drawSelectorOnTop="true"
        android:fastScrollEnabled="true"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/batemantext"
        android:width="300dp"
        android:inputType="text"
        android:layout_above="@+id/batecheck1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="Edit Text"
        android:textColor="#ff080808" />

</RelativeLayout>
